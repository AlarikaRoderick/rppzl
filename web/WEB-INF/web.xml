<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <welcome-file-list>
        <welcome-file>/WEB-INF/pages/enterClient.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>EnterClientServlet</servlet-name>
        <servlet-class>servlet.EnterClientServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>EnterClientServlet</servlet-name>
        <url-pattern>/enterClient</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClientServlet</servlet-name>
        <servlet-class>servlet.ClientPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClientServlet</servlet-name>
        <url-pattern>/clients/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllClientsServlet</servlet-name>
        <servlet-class>servlet.AllClientsPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AllClientsServlet</servlet-name>
        <url-pattern>/clients</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DepositPageServlet</servlet-name>
        <servlet-class>servlet.DepositPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DepositPageServlet</servlet-name>
        <url-pattern>/deposit/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllDepositsPageServlet</servlet-name>
        <servlet-class>servlet.AllDepositsPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AllDepositsPageServlet</servlet-name>
        <url-pattern>/deposits</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreditPageServlet</servlet-name>
        <servlet-class>servlet.CreditPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreditPageServlet</servlet-name>
        <url-pattern>/credit/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllCreditsPageServlet</servlet-name>
        <servlet-class>servlet.AllCreditsPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AllCreditsPageServlet</servlet-name>
        <url-pattern>/credits</url-pattern>
    </servlet-mapping>
</web-app>